<!DOCTYPE html>
<html>
  <head>
    <title>Armageddon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>

          <li class="">
            <%= link_to "#{current_user.first_name} 様", user_path(current_user.id) %>
          </li>

           <li class="">
            <%= link_to "カート", carts_path %>
          </li>

          <li class="">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          </li>

        <% elsif admin_signed_in? %>

          <li class="">
            <%= link_to "販売一覧", cds_admins_path %>
          </li>

          <li class="">
            <%= link_to "ユーザ一覧", users_admins_path %>
          </li>

          <li class="">
            <%= link_to "商品登録", cds_new_path %>
          </li>

          <li class="">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
          </li>

        <% else %>
          <li class="">
            <%= link_to "会員登録",  new_user_registration_path %>
          </li>

          <li class="">
            <%= link_to "ログイン", new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
