<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<div class="index_container">


<div id="container">
    <div id="theTarget">
      <div class="image1"></div>
      <div class="image2"></div>
      <div class="image3"></div>
      <div class="image4"></div>
      <div class="image5"></div>
    </div>
	<h3 class="slide"><%= link_to "Armageddon", root_path %></h3>
	<div class="search_container">
	<!-- 検索窓 -->
	<%= search_form_for @search, url: root_path do |f| %>
	  <%= f.text_field :cd_name_cont, placeholder: 'CD名を入力...' %>
	  <%= f.submit ("検索する") %>
	<% end %>
	</div>
</div>


<div class="cd_index">
<% @search_cds.each do |cds| %>
    <p><%= attachment_image_tag cds, :jacket_image, fallback: "no_image.jpg", size: "300x300" %></p>
    <p><%= cds.cd_name %></p>
    <p><%= link_to "詳細ページへ", cd_path(cds.id) %></p>
<% end %>
</div>


<%= paginate @search_cds %>


</div>

