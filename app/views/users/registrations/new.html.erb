<div class="container">
  <div class="row">
    <h1 class="text-center">Sign up</h1>

<div class="text-center">
<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :姓 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :名 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :カナ姓 %><br />
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :カナ名 %><br />
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "form-control" %>
  </div>


  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field form-group col-xs-6 col-xs-offset-3">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info col-xs-6 col-xs-offset-3" %>
  </div>
<% end %>

<div class="col-xs-6 col-xs-offset-3">
<%= render "devise/shared/links" %>
</div>

</div>
