<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-sm-3">
           <%= render 'users/users_info', user: @user, destinations: @destinations %>
        </div>

        <div class="col-sm-9">
        <table class='table table-striped'>
          <thead>
          <tr>
            <th><span>顧客詳細</span></th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><span>商品名</span></td>
            <td><span>価格</span></td>
            <td><span>小計</span></td>
            <td><span>購入日</span></td>
            <td><span>発送ステータス</span></td>
          </tr>

          <tr>
              <% @buy_information.each do |b| %>
                <% b.purchase_histories.each do |p| %>
                <td><span><%= p.cd_name %></span></td>
                <td><span><%=  p.price %> 円</span></td>
                <td><span><%= b.subtotal %> 円</span></td>
                <td colspan="2"><%=  p.created_at.strftime('%Y/%m/%d %H:%M')  %></td></td>
                  <% end %>
                  <td><span><form action="/buy/<%= b.id %>" method="post" class="submit_form">
                  <%= select_tag 'update_delivery_status',  options_for_select([["受付中", 1 ], ["商品準備中", 2], ["出荷済", 3]], {:selected => b.delivery_status_before_type_cast} ),  class: "update_delivery_status" %></form></span></td>
              <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


<script>
$(document).ready(function(){
  $(".update_delivery_status").change(function(){
    var index = $('.update_delivery_status').index(this);
      $('.submit_form').eq(index).submit();
  });
});
</script>