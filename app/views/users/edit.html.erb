<h1>Users#edit</h1>

<%= form_for(@user) do |f| %>
<label>Name</label>
<!-- f.text_field :name, autofocus: true, placeholder:"名前" -->
</br>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
</br>

<label>ProfileImage</label>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
</br>

<label>姓</label>
<%= f.text_field :first_name, autofocus: true %>
</br>

<label>名</label>
<%= f.text_field :last_name, autofocus: true %>
</br>

<label>カナ姓</label>
<%= f.text_field :kana_first_name, autofocus: true %>
</br>

<label>カナ名</label>
<%= f.text_field :kana_last_name, autofocus: true %>
</br>

<label>郵便番号</label>
<%= f.text_field :postal_code, autofocus: true %>
</br>

<label>住所</label>
<%= f.text_field :address, autofocus: true %>
</br>

<label>メールアドレス</label>
<%= f.text_field :email, autofocus: true %>
</br>

<%= f.submit "Update User" %>
<% end %>

<%= link_to "退会", deleted_flag_path, method: :patch %>

