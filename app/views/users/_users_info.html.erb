
    <div><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    </div>
<table class='table'>

    <tr>
        <th>User info</th>
        <th></th>
    </tr>
